<section class="container bg-gradient-to-r from-blue-300 to-blue-600">
  <a href="/"
    class="btn btn-primary bg-gradient-to-r from-blue-300 to-blue-600 hover:bg-blue-200 text-black grid justify-items-end border-none text-rubik">Home</a>
  <a href="/search"
    class="btn btn-primary rounded-full bg-gradient-to-r from-blue-300 to-blue-600 hover:bg-blue-200 text-black grid justify-items-end border-none text-rubik">Search
    Listing</a>
  <form id="listForm" class="py-10">
    <div class="mb-3">
      <label for="idName" class="form-label text-rubik">Customer ID</label>
      <input id="custID" aria-describedby="idHelp" class="w-full">
      <div id="idname" class="form-text text-white">Customer Service will provide you with an id on sign up</div>
    </div>
    <div class="mb-3">
      <label for="pdName" class="form-label text-rubik">Product Name</label>
      <input id="pdNameInput" aria-describedby="pdnameHelp" class="w-full">
      <div id="pdname" class="form-text text-white">What is the name of your product?</div>
    </div>
    <div class="mb-3">
      <label for="cat" class="form-label text-rubik">Category</label>
      <input id="categoryInput" aria-describedby="catHelp" class="w-full">
      <div id="catHelp" class="form-text text-white">What category would this item belong to?</div>
    </div>
    <div class="mb-3">
      <label for="pdCond" class="form-label text-rubik">Product Condition</label>
      <input id="pdCondInput" aria-describedby="pdCondHelp" class="w-full">
      <div id="pdCondHelp" class="form-text text-white">What condition is your product in?</div>
    </div>
    <div class="mb-3">
      <label for="quantity" class="form-label text-rubik">Quantity</label>
      <input id="quantityInput" aria-describedby="quantHelp" class="w-full">
      <div id="quantHelp" class="form-text text-white">How many do you have to sell?</div>
    </div>
    <div class="mb-3">
      <label for="price" class="form-label text-rubik">Price</label>
      <input id="priceInput" aria-describedby="priceHelp" class="w-full">
      <div id="priceHelp" class="form-text text-white">Format: 0000.00</div>
    </div>
    <div class="mb-3">
      <label for="branding" class="form-label text-rubik">Brand</label>
      <input id="brandInput" aria-describedby="brandHelp" class="w-full">
      <div id="brandHelp" class="form-text text-white">What namebrand is your item?</div>
    </div>
    <div class="mb-3">
      <label for="description" class="form-label text-rubik">Description</label>
      <input id="descriptionInput" aria-describedby="emailHelp" class="w-full">
      <div id="descHelp" class="form-text text-white">How would you describe your item?</div>
    </div>
    <div class="mb-3">
      <label for="location" class="form-label text-rubik">Location</label>
      <input id="locationInput" class="w-full">
      <div id="locationHelp" class="form-text text-white">Where are you located?</div>
    </div>
    <button id="list-submit" type="submit"
      class="btn btn-primary bg-gradient-to-r from-blue-300 to-blue-600 text-lime-300 hover:bg-black">Submit</button>
  </form>
</section>
<script src="/js/list.js"></script>