<nav class="navbar navbar-expand-lg navbar-light bg-dark py-4">
  <div class="container">
    <a class="navbar-brand font-weight-bold text-white " href="#">Jungslist</a>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <form class="form-inline ml-auto mr-3 d-flex" id="search-form">
        <input class="form-control form-control-lg mr-sm-2" type="text" id="search-input" placeholder="Search...">
        <button class="btn btn-primary btn-lg my-2 my-sm-0" id="search-button" type="button">Search</button>
      </form>
    </div>
  </div>
</nav>

<section class="product-container product-row mt-4">

  <div class="container">
    <div class="row">   
      {{#each actualProductData}}
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title" style="font-size: 1.8rem;">{{product_name}}</h5>
              <p class="card-text" style="font-size: 1.4rem;">${{price}}</p>
              <p class="card-text" style="font-size: 1.2rem;">{{description}}</p>
              <p class="card-text" style="font-size: 1.2rem;">{{brand}}</p>
              <p class="card-text" style="font-size: 1.2rem;">{{product_condition}}</p>
              <p class="card-text" style="font-size: 1.2rem;">{{category}}</p>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>

</section>

<script src="./js/searchpage.js"></script>