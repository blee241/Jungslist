<section class="product-container product-row mt-4">
  <div class="container">
    <div class="row">
      {{#each actualProductData as |productData|}}
      <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title" style="font-size: 1.8rem;">{{product_name}}</h5>
            <p class="card-text" style="font-size: 1.4rem;">${{price}}</p>
            <p class="card-text" style="font-size: 1.2rem;">{{description}}</p>
            <p class="card-text" style="font-size: 1.2rem;">{{brand}}</p>
            <p class="card-text" style="font-size: 1.2rem;">{{product_condition}}</p>
            <p class="card-text" style="font-size: 1.2rem;">{{category}}</p>
            <p class="card-text" style="font-size: 1.2rem;">{{seller_location}}</p>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
  {{filteredProductData.0.product_name}}
  {{#if filteredProductData}}
  <div class="container mt-4" id="searchBox">
    <div class="row">
      {{#each filteredProductData}}
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title" style="font-size: 1.8rem;">{{product_name}}</h5>
            <p class="card-text" style="font-size: 1.2rem;">{{price}}</p>
            <p class="card-text" style="font-size: 1.2rem;">{{seller_location}}</p>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
  {{else}}
  <div class="container mt-4" id="searchBox">
   <!--<p>No filtered products found.</p>-->
  </div>
  {{/if}}
</section>
</section>
